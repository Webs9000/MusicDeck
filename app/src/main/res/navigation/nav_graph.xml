<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.websmobileapps.musicdeck.Fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createListFragment"
            app:destination="@id/createListFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.websmobileapps.musicdeck.Fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_createListFragment"
            app:destination="@id/createListFragment" />
    </fragment>
    <fragment
        android:id="@+id/createListFragment"
        android:name="com.websmobileapps.musicdeck.Fragments.CreateListFragment"
        android:label="CreateListFragment" />
    <fragment
        android:id="@+id/sidebarFragment"
        android:name="com.websmobileapps.musicdeck.Fragments.SidebarFragment"
        android:label="SidebarFragment" />
</navigation>